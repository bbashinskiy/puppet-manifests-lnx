# CyberArk's list of shared IDs will be filled in User_Alias
User_Alias  IBM_NCO_LLS_LCL = ncolls
User_Alias  IBM_NCO_ADM_LCL = ncoadm
User_Alias  IBM_NCO_NCOSYS_LCL = ncosys
